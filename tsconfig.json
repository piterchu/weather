{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@weather/settings": ["libs/settings/src/index.ts"],
      "@weather/home": ["libs/home/src/index.ts"],
      "@weather/shared-components": ["libs/shared-components/src/index.ts"],
      "@weather/shared-services": ["libs/shared-services/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
